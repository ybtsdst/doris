{
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms100m -Xlog:disable",
    "sonarlint.pathToCompileCommands": "/opt/transwarp/doris/be/build_Release/compile_commands.json",
    "sonarlint.testFilePattern": "{/opt/transwarp/doris/thirdparty/installed/include/**, /usr/include/**}",
    "cmake.generator": "Unix Makefiles",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    "spellright.language": [],
    "spellright.documentTypes": [
        "latex"
    ],
    // the intellisense response is slow due to todo extension, and we remove it in devcontainer.
    // but we also find the clangd performs well on code intellisense and clangd also brings some other benefit, e.g. checking header files: remove unnecessary header
    // so we disable ms cpptools extension and switch to clangd; 
    // maybe we switch back later for other reasons
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.intelliSenseCacheSize": 0,
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.links": false
    },
    "clangd.path": "/usr/local/lib/clangd/bin/clangd",
    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--log=verbose",
        "--pch-storage=memory",
        "--query-driver=/usr/bin/gcc",
        "--suggest-missing-includes",
        "--cross-file-rename",
        "--compile-commands-dir=/opt/transwarp/doris/be/build_Debug",
        "--completion-style=detailed",
        "-j=40",
        "--all-scopes-completion",
        // "--limit-references=100",
        // "--limit-results=20",
        "--malloc-trim"
    ],
}
